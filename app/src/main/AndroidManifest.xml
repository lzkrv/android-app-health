<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.healthtracking">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.food.AddFoodActivity"
            android:label="Add Food" />
        <activity
            android:name=".ui.activities.health.AddHealthActivity"
            android:label="Add Health Point" />
        <activity
            android:name=".ui.activities.hobby.AddHobbyActivity"
            android:label="Add Hobby Activity" />
        <activity
            android:name=".ui.activities.mood.AddMoodActivity"
            android:label="Add Mood Point" />
        <activity
            android:name=".ui.activities.sport.AddSportActivity"
            android:label="Add Sport Activity" />
        <activity
            android:name=".ui.activities.sport.AddNewSportActivity"
            android:label="Add New Sport" />
        <activity
            android:name=".ui.activities.sport.SportsListActivity"
            android:label="My Sports" />
        <activity
            android:name=".ui.activities.hobby.HobbiesListActivity"
            android:label="My Hobbies" />
        <activity
            android:name=".ui.activities.hobby.AddNewHobbyActivity"
            android:label="Add New Hobby" />
    </application>

</manifest>